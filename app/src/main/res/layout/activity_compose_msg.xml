<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chandra.sms_io.ComposeMsg">

    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phoneNum"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="To" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/ComposeMsg"
        android:hint="Type Your Messsage"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/send"
        android:layout_alignEnd="@+id/send" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-->"
        android:id="@+id/send"
        android:layout_alignBottom="@+id/ComposeMsg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
